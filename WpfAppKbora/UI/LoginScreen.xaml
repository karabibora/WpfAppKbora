<Page x:Class="CusaInWPF.UI.LoginScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CusaInWPF.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Online Screen">

    <Grid>
        <TextBox x:Name="edtUserName"  HorizontalAlignment="Left" Height="23" Margin="159,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" RenderTransformOrigin="-1.466,3.874"/>
        <Label x:Name="lblUserName" Content="User Name" HorizontalAlignment="Left" Margin="32,83,0,0" VerticalAlignment="Top" Height="23" Width="100"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top" Height="23" Width="100" />
        <Button Content="Login" HorizontalAlignment="Left" Margin="204,198,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <PasswordBox HorizontalAlignment="Left" Margin="159,137,0,0" VerticalAlignment="Top" Width="155"/>

    </Grid>
</Page>
